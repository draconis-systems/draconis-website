.glitch-text {
  position: relative;
  animation: glitch 2s infinite;
}

@keyframes glitch {
  0%, 100% { transform: translate(0); }
  10% { transform: translate(-2px, -2px); }
  20% { transform: translate(2px, 2px); }
  30% { transform: translate(-2px, 2px); }
  40% { transform: translate(2px, -2px); }
  50% { transform: translate(-2px, -2px); }
  60% { transform: translate(2px, 2px); }
  70% { transform: translate(-2px, 2px); }
  80% { transform: translate(2px, -2px); }
  90% { transform: translate(-2px, -2px); }
}

/* Gradients */
.bg-gradient-to-br {
  background: linear-gradient(to bottom right, var(--black-background), var(--dark-gray), var(--black-background));
}

.bg-gradient-to-r {
  background: linear-gradient(to right, var(--dark-gray), var(--black-background));
}

/* Hidden on mobile */
.hidden { display: none; }
@media (min-width: 768px) {
  .md\\:flex { display: flex; }
}

/* Space utilities */
.space-x-8 > * + * { margin-left: 2rem; }
.space-y-2 > * + * { margin-top: 0.5rem; }

/* Max width */
.max-w-3xl { max-width: 48rem; }
.max-w-4xl { max-width: 56rem; }
.max-w-6xl { max-width: 72rem; }

/* Transitions */
.transition-colors { transition: color 0.3s ease; }
.transition-all { transition: all 0.3s ease; }
.duration-300 { transition-duration: 0.3s; }

/* Hover effects */
.hover\\:text-neon-cyan:hover { color: var(--neon-cyan); }
.hover\\:text-neon-magenta:hover { color: var(--neon-magenta); }
.hover\\:text-neon-green:hover { color: var(--neon-green); }
.hover\\:text-electric-blue:hover { color: var(--electric-blue); }
.hover\\:text-hot-pink:hover { color: var(--hot-pink); }
.hover\\:bg-neon-cyan:hover { background-color: var(--neon-cyan); }
.hover\\:text-black:hover { color: var(--black-background); }
.hover\\:scale-105:hover { transform: scale(1.05); }

/* Group hover effects */
.group:hover .group-hover\\:text-neon-cyan { color: var(--neon-cyan); }
.group:hover .group-hover\\:text-neon-magenta { color: var(--neon-magenta); }
.group:hover .group-hover\\:text-neon-green { color: var(--neon-green); }
.group:hover .group-hover\\:text-electric-blue { color: var(--electric-blue); }
.group:hover .group-hover\\:text-hot-pink { color: var(--hot-pink); }

.group:hover .hover\\:neon-glow {
  box-shadow: 0 0 5px var(--neon-cyan), 0 0 10px var(--neon-cyan), 0 0 15px var(--neon-cyan);
}
